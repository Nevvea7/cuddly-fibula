<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin">

        <RelativeLayout
            style="@style/Widget.CardContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/search_list_restaurant_pic" />

            <TextView
                android:id="@+id/search_list_restaurant_name"
                android:layout_toRightOf="@id/search_list_restaurant_pic"
                android:layout_toEndOf="@id/search_list_restaurant_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Friends"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <TextView
                android:id="@+id/search_list_restaurant_category"
                android:layout_alignLeft="@id/search_list_restaurant_name"
                android:layout_alignStart="@id/search_list_restaurant_name"
                android:layout_below="@id/search_list_restaurant_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="yo yo yo" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>