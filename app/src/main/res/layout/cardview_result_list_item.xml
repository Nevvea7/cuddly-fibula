<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/card_margin">

        <RelativeLayout
            style="@style/Widget.CardContent"
            android:padding="@dimen/card_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:id="@+id/search_list_restaurant_pic" />

            <TextView
                android:id="@+id/search_list_restaurant_name"
                android:layout_toRightOf="@id/search_list_restaurant_pic"
                android:layout_toEndOf="@id/search_list_restaurant_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Friends"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <TextView
                android:id="@+id/search_list_restaurant_category"
                android:layout_alignLeft="@id/search_list_restaurant_name"
                android:layout_alignStart="@id/search_list_restaurant_name"
                android:layout_below="@id/search_list_restaurant_name"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="yo yo yo" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_alignLeft="@id/search_list_restaurant_name"
                android:layout_alignStart="@id/search_list_restaurant_name"
                android:layout_below="@id/search_list_restaurant_category"
                android:id="@+id/search_list_restaurant_rating" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>